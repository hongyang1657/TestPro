<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@color/colorWhite"
    android:layout_weight="10"
    android:gravity="center_horizontal"
    android:padding="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--空调开关-->
    <RelativeLayout
        android:id="@+id/rl_kongtiao_kaiguan"
        android:clickable="true"
        android:layout_weight="3"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_kongtiao_kaiguan"
            android:src="@mipmap/theme2_kongtiao_fan_3x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_kongtiao_kaiguan"
            android:text="空调 关"
            android:paddingTop="4dp"
            android:layout_below="@id/iv_kongtiao_kaiguan"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
   <!--空调温度-->
    <TextView
        android:id="@+id/tv_kongtiao_wendu"
        android:clickable="true"
        android:layout_weight="4"
    android:text="18°"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

    <!--睡眠-->
    <RelativeLayout
        android:id="@+id/rl_kongtiao_moshi"
        android:clickable="true"
        android:layout_weight="3"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_kongtiao_sleep"
            android:src="@mipmap/theme2_kongtiao_sleep_3x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_kongtiao_sleep"
            android:text="睡眠 关"
            android:paddingTop="4dp"
            android:layout_below="@id/iv_kongtiao_sleep"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>